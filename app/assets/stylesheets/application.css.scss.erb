body {
	font-size: 13px;
	line-height: 22px;
	margin: 0px;
	padding: 0px;
	color: #fff;
}

body{
	background-image:url(/assets/back0.jpg);
	background-repeat:repeat-y;
	background-color:#1f0204;
	background-position:top;	
}
#wapper {
	background-image: url(/assets/01index_bg.jpg);
	background-repeat: no-repeat;
	background-position: center top;
	height: 1000px;
	margin: 0 auto;
}

.title{
	color: #F00;
}
.title a{
	color: #fff;
	padding-top: 4px;
	padding-right: 4px;
	padding-bottom: 12px;
	padding-left: 4px;
	margin-bottom: 10px;
	text-decoration: none;
}
.title2 {
	font-family: "lishu", "offical";
	font-size: 24px;
	color: #F00;
}
.title3 {
	font-family: "lishu", "offical";
	font-size: 20px;
	color: #F00;
	border: bold;
}
.title2_en {
	font-family: "Arial Black", Gadget, sans-serif;
	font-size: 16px;
	font-weight: bolder;
	color: #F00;
	letter-spacing: 0.2em;
}

.content {
	width: 400px;
}
.content_title {
	font-family: "lishu", "offical";
	font-size: 24px;
	color: #F00;
	text-decoration: none;
}

#slideshow1 {
  width: 578px;
  height: 230px;
}
#slideshow1 img {
  display: block;
  width: 578px;
  height: 230px;
}

.news_list {
	margin: 0px;
	padding: 0px;
}
.news_list li {
	list-style-image: url(/assets/dot.jpg);
	list-style-position: inside;
	padding: 0px;
	margin-top: 6px;
	margin-left: 12px;
}
.news_list li a {
	color: #033;
	text-decoration: none;
}
.right_tab {
	background-image: url(/assets/line2.png);
	background-repeat: repeat-x;
	background-position: left bottom;
	width: 400px;
}
.right_tab a {
	color: #fff;
	text-decoration: none;
	padding: 2px 4px;
}

a.link_btn {
	padding: 6px 10px;
	margin: 0px;
	color: #F00;
	text-decoration: none;
	font-weight: 700;
}
